<div class="row">
  <div class="col-xs-12">
    <p id="notice"><%= notice %></p>
  </div
</div>

<div class="row">

  <div class="col-xs-10">

    <div class="col-xs-12">

      <div class="well">

        <h2>Projeto: <%= @project.name %></h2>
      </div>
    </div>

    <div class="col-xs-7">

      <div>

        <h4>Descrição:</h4>

        <p> <%= @project.description %> </p>
      </div>
    </div>

    <div class="col-xs-5">

      <div>

        <h4>Tarefas associadas:</h4>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Título</th>
            <th>Criada em</th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @project.tasks.each do |task| %>
              <tr>
                <td><%= task.name %></td>
                <td><%= task.created_at.to_s.gsub(/(\d+)-(\d+)-(\d+).+/,'\3/\2/\1') %></td>
                <td><%= link_to 'Show', task %></td>
                <td><%= link_to 'Edit', edit_task_path(task) %></td>
                <td><%= link_to 'Destroy', task, method: :delete, data: {confirm: 'Are you sure?'} %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>


  <div class="col-xs-2">
    <ul class="nav nav-pills nav-stacked">
      <li>
        <a href="<%= edit_project_path(@project) %>">Editar<%= image_tag("pencil.png", :style => 'float:right;') %></a>
      </li>

      <li>
        <a href="<%= addtask_project_path(@project) %>">Adicionar
          Tarefa<%= image_tag("plus.png", :style => 'float:right;') %></a>
      </li>

      <li>
        <%= link_to (raw "Excluir"+image_tag("cross.png", :style => 'float:right;')), @project, method: :delete, data: {confirm: 'Are you sure?'} %>
      </li>
    </ul>

  </div>

</div>
