<%= form_for @project, :html => {:class => 'well well-lg form-horizontal', :role => 'form'} do |f| %>
    <% if @project.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">

            <%= pluralize(@project.errors.count, "error") %> impediram este projeto de ser salvo:

          </div>

          <ul>
            <% @project.errors.full_messages.each do |msg| %>
                <li>• <%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">

      <div class="col-xs-12">

        <div class="field">
          <%= f.label :name, 'Nome' %>
          <br>
          <%= f.text_field :name, :class => 'form-control' %>
        </div>

      </div>
    </div>
    <div class="form-group">

      <div class="col-xs-12">

        <div class="field">
          <%= f.label :description, 'Descrição' %>
          <br>
          <%= f.text_area :description, :class => 'form-control' %>
        </div>

      </div>
    </div>
    <div class="form-group">

      <div class="actions col-xs-12">
        <br>
        <%= f.submit 'Criar Projeto', :class => "btn btn-primary" %>

        <%= link_to 'Cancelar',cancel_path, :class=>' btn btn-link'%>
      </div>

    </div>
<% end %>